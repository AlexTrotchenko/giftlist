---
import "@/styles/global.css";
import { Header } from "@/components/Header";
import { getLocale, locales, baseLocale, localizeHref, deLocalizeHref } from "@/paraglide/runtime";

interface Props {
	title?: string;
	locale?: string;
}

const { title = "GiftList", locale = getLocale() } = Astro.props;
const currentPath = Astro.url.pathname;
const basePath = deLocalizeHref(currentPath);
---

<!doctype html>
<html lang={locale}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<!-- SEO: Alternate language links -->
		{locales.map((lang) => (
			<link
				rel="alternate"
				hreflang={lang}
				href={new URL(localizeHref(basePath, { locale: lang }), Astro.site || Astro.url.origin).href}
			/>
		))}
		<link
			rel="alternate"
			hreflang="x-default"
			href={new URL(localizeHref(basePath, { locale: baseLocale }), Astro.site || Astro.url.origin).href}
		/>
		<script is:inline>
			(function () {
				const mode = localStorage.getItem("color-mode") || "dark";
				document.documentElement.classList.add(mode);
			})();
		</script>
	</head>
	<body class="min-h-screen bg-background font-sans antialiased">
		<div class="relative flex min-h-screen flex-col">
			<Header client:load locale={locale} currentPath={currentPath} />
			<main class="flex-1">
				<slot />
			</main>
		</div>
	</body>
</html>
